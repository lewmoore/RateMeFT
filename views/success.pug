doctype html
html.core(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    title FT.com
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    script.
      var cutsTheMustard = ('querySelector' in document && 'localStorage' in window && 'addEventListener' in window);
      if (cutsTheMustard)
      document.documentElement.className = document.documentElement.className.replace(/\\bcore\b/g, 'enhanced');
    style.
      .core .o--if-js,
      .enhanced .o--if-no-js { display: none !important; }
      html {
      font-family: Georgia, serif;
      overflow-x: hidden;
      }
      body {
      margin: 0;
      }
    link(rel='stylesheet', href='https://www.ft.com/__origami/service/build/v2/bundles/css?modules=o-header@^7.3.0')
    script(src='https://polyfill.io/v2/polyfill.min.js')
    script.
      (function(src) {
      if (cutsTheMustard) {
      var o = document.createElement('script');
      o.async = o.defer = true;
      o.src = src;
      var s = document.getElementsByTagName('script')[0];
      s.parentNode.insertBefore(o, s);
      }
      }('https://www.ft.com/__origami/service/build/v2/bundles/js?modules=o-header@^7.3.0'));
    body
    header.o-header(data-o-component='o-header', data-o-header--no-js='')
      .o-header__row.o-header__anon
        ul.o-header__anon-list
          li.o-header__anon-item
            a.o-header__anon-link(href='#') Subscribe
          li.o-header__anon-item
            a.o-header__anon-link(href='#') Sign In
      .o-header__row.o-header__top
        .o-header__container
          .o-header__top-wrapper
            .o-header__top-column.o-header__top-column--left
              a.o-header__top-link.o-header__top-link--menu(href='#o-header-drawer', aria-controls='o-header-drawer', title='Open drawer menu')
                span.o-header__top-link-label Menu
              a.o-header__top-link.o-header__top-link--search(href='#o-header-search', aria-controls='o-header-search-js', title='Open search bar')
                span.o-header__top-link-label Search
            .o-header__top-column.o-header__top-column--center
              a.o-header__top-logo(href='/', title='Go to Financial Times homepage')
                span.o-header__visually-hidden Financial Times
            .o-header__top-column.o-header__top-column--right
              a.o-header__top-link.o-header__top-link--myft(href='/myft', aria-label='My F T')
                span.o-header__visually-hidden myFT
      #o-header-search.o-header__row.o-header__search.o--if-no-js(role='search')
        .o-header__container
          form.o-header__search-form(action='/search', role='search', aria-label='Site search')
            label.o-header__visually-hidden(for='o-header-search-term')
              | Search the 
              abbr(title='Financial Times') FT
            input#o-header-search-term.o-header__search-term(name='q', type='text', placeholder='Search the FT')
            button.o-header__search-submit(type='submit')
              | Search
      #o-header-search-js.o-header__row.o-header__search(role='search', data-o-header-search='')
        .o-header__container
          form.o-header__search-form(action='/search', role='search', aria-label='Site search')
            label.o-header__visually-hidden(for='o-header-search-term-js')
              | Search the 
              abbr(title='Financial Times') FT
            input#o-header-search-term-js.o-header__search-term(name='q', type='text', placeholder='Search the FT')
            button.o-header__search-submit(type='submit')
              | Search
            button.o-header__search-close.o--if-js(type='button', aria-controls='o-header-search-js', title='Close search bar')
              span.o-header__visually-hidden Close
      nav#o-header-nav-mobile.o-header__row.o-header__nav.o-header__nav--mobile(role='navigation', aria-label='Main navigation')
        ul.o-header__nav-list
          li.o-header__nav-item
            a.o-header__nav-link.o-header__nav-link--primary(href='', aria-label='Current page', aria-current='page') Home
          li.o-header__nav-item
            a.o-header__nav-link.o-header__nav-link--primary(href='') FastFT
          li.o-header__nav-item
            a.o-header__nav-link.o-header__nav-link--primary(href='') Markets Data
      nav#o-header-nav-desktop.o-header__row.o-header__nav.o-header__nav--desktop(role='navigation', aria-label='Main navigation')
        .o-header__container
          ul.o-header__nav-list.o-header__nav-list--left
            li.o-header__nav-item
              a#o-header-link-.o-header__nav-link.o-header__nav-link--primary(href='', aria-label='Current page', aria-current='page') Home
            li.o-header__nav-item
              a#o-header-link-.o-header__nav-link.o-header__nav-link--primary(href='') World
            li.o-header__nav-item
              a#o-header-link-.o-header__nav-link.o-header__nav-link--primary(href='') UK
            li.o-header__nav-item
              a#o-header-link-.o-header__nav-link.o-header__nav-link--primary(href='') Companies
            li.o-header__nav-item
              a#o-header-link-.o-header__nav-link.o-header__nav-link--primary(href='') Markets
            li.o-header__nav-item
              a#o-header-link-.o-header__nav-link.o-header__nav-link--primary(href='') Opinion
            li.o-header__nav-item
              a#o-header-link-.o-header__nav-link.o-header__nav-link--primary(href='') Work & Careers
            li.o-header__nav-item
              a#o-header-link-.o-header__nav-link.o-header__nav-link--primary(href='') Life & Arts
          ul.o-header__nav-list.o-header__nav-list--right
            li.o-header__nav-item
              a.o-header__nav-link.o-header__nav-link--utility(href='/login') Sign In
            li.o-header__nav-item
              a.o-header__nav-button(href='/products') Subscribe
              
      center
          p You selected #{this.rating}, Thanks for your feedback!
  
